<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.lchrislee.yyaapp.activities.PaintActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lchrislee.yyaapp.views.CanvasView
        android:id="@+id/activity_paint_canvas"
        android:background="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/activity_paint_palette"
        android:layout_marginTop="@dimen/margin_2x"
        android:layout_marginStart="@dimen/margin_2x"
        android:layout_marginEnd="@dimen/margin_2x"
        android:layout_marginBottom="@dimen/margin_1x"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <com.lchrislee.yyaapp.views.PaletteView
        android:id="@+id/activity_paint_palette"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</RelativeLayout>
